    "push4"  <word:Word> =>? u256_as_push_data::<4>(word).map(Opcode::PUSH4).map(ast::Instruction::Op),
    "push5"  <word:Word> =>? u256_as_push_data::<5>(word).map(Opcode::PUSH5).map(ast::Instruction::Op),
