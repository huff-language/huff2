    "push10" <word:Word> =>? u256_as_push_data::<10>(word).map(Opcode::PUSH10).map(ast::Instruction::Op),
    "push11" <word:Word> =>? u256_as_push_data::<11>(word).map(Opcode::PUSH11).map(ast::Instruction::Op),
